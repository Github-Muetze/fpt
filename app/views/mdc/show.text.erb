mdc =
{
    ["number"] = "<%= @flight.number %>",
    ["callsign"] = "<%= @flight.full_callsign %>",
    ["mission"] = "<%= @flight.mission %>",
    ["time"] = "<%= @flight.start.strftime('%d%H%M%^b%y') %>",
    ["task"] = "<%= @flight.task %>",
    ["ao"] = "<%= @flight.ao %>",
    ["frequency"] = "<%= @flight.frequency %>",
    ["departure"] = "<%= @flight.departure_name %>",
    ["departure_airbase_img"] ="<%= link_to_start_airbase_image(@flight) %>",
    ["departure_img"] ="<%= link_to_departure_image(@flight) %>",
    ["recovery"] = "<%= @flight.recovery_name %>",
    ["recovery_airbase_img"] ="<%= link_to_land_airbase_image(@flight) %>",
    ["recovery_img"] ="<%= link_to_recovery_image(@flight) %>",
    ["slots"] =
    {
<% @flight.pilots.each do |pilot| %>
        [<%= pilot.number %>] =
        {
            ["callsign"] = "<%= pilot.callsign %>",
            ["pilot"] = "<%= pilot.name %>",
            ["iff"] = <%= pilot.iff %>,
            ["tcn"] = "<%= pilot.tacan %>",
            ["laser"] = <%= pilot.laser %>,
            ["netid"] = "<%= pilot.net_id %>",
        },
<% end %>
    },
    ["loadout"] =
    {
        ["a2a"] = "<%= @loadout.a2a text: :short %>",
        ["a2g"] = "<%= @loadout.a2g text: :short %>",
        ["pod"] = "<%= @loadout.pods text: :short %>",
        ["tks"] = "<%= @loadout.tanks text: :short %>",
        ["gun"] = "<%= @loadout.gun %>",
        ["chf"] = "<%= @loadout.flares %>",
        ["flr"] = "<%= @loadout.chaff %>",
        ["fuel"] = "<%= @loadout.fuel %>",
    },
    ["airbases"] =
    {
        {
<% airbase = Settings.theaters[@flight.theater].airbases[@flight.start_airbase] %>
            ["type"] = "Dep",
            ["name"] = "<%= airbase.name %>",
            ["tcn"] = "<%= airbase.tacan %>",
            ["atis"] = "<%= airbase.atis %>",
            ["ground"] = "<%= airbase.ground %>",
            ["tower"] = "<%= airbase.tower %>",
            ["runway"] = "<%= airbase.takeoff %>",
            ["elevation"] = "<%= airbase.elevation %>",
            ["ils"] = "<%= airbase.ils %>",
        },
        {
<% airbase = Settings.theaters[@flight.theater].airbases[@flight.land_airbase] %>
            ["type"] = "Arr",
            ["name"] = "<%= airbase.name %>",
            ["tcn"] = "<%= airbase.tacan %>",
            ["atis"] = "<%= airbase.atis %>",
            ["ground"] = "<%= airbase.ground %>",
            ["tower"] = "<%= airbase.tower %>",
            ["runway"] = "<%= airbase.land %>",
            ["elevation"] = "<%= airbase.elevation %>",
            ["ils"] = "<%= airbase.ils %>",
        },
<% if @flight.divert_airbase %>
        {
<% airbase = Settings.theaters[@flight.theater].airbases[@flight.divert_airbase] %>
            ["type"] = "Div",
            ["name"] = "<%= airbase.name %>",
            ["tcn"] = "<%= airbase.tacan %>",
            ["atis"] = "<%= airbase.atis %>",
            ["ground"] = "<%= airbase.ground %>",
            ["tower"] = "<%= airbase.tower %>",
            ["runway"] = "<%= airbase.land %>",
            ["elevation"] = "<%= airbase.elevation %>",
            ["ils"] = "<%= airbase.ils %>",
        },
<% end %>
    },
    ["waypoints"] =
    {
<% @flight.waypoints.each do |wp| %>
        [<%= wp.number %>] =
        {
            ["name"] = "<%= wp.name %>",
            ["pos"] = "<%= wp.position %>",
            ["lat"] = "<%= wp.latitude %>",
            ["lon"] = "<%= wp.longitude %>",
            ["coords"] = "<%= wp.coords %>",
            ["dme"] = "<%= wp.dme %>",
            ["alt"] = "<%= wp.elevation %>",
            ["tot"] = "<%= wp.tot&.to_s(:time) %>",
            ["cdu"] = "<%= wp.export %>",
        },
<% end %>
    },
    ["comms"] =
    {
<%
  comms = 1.upto(4).map { |num| [num, @flight.send("radio#{num}")] }.select { |e| e.last.present? }
  unless comms.empty? %>
    <% comms.each do |c| %>
        [<%= c.first %>] = "<%= c.last %>",
    <% end %>
<% end %>
    },
    ["support"] =
    {
<% support = @flight.selected_support %>
        ["tanker"] =
        {
<% support.select { |s| s.type == 'TANKER' }.each do |t| %>
            {
                ["callsign"] = "<%= t.callsign %>",
                ["tacan"] = "<%= t.tacan %>",
                ["comms"] = "<%= t.comms %>",
                ["altitude"] = "<%= t.altitude %>",
                ["speed"] = "<%= t.speed %>",
                ["position"] = "<%= t.position %>",
            },
<%  end %>
        },
        ["awacs"] =
        {
<% support.select { |s| s.type == 'AWACS' }.each do |a| %>
            {
                ["callsign"] = "<%= a.callsign %>",
                ["comms"] = "<%= a.comms %>",
                ["altitude"] = "<%= a.altitude %>",
                ["position"] = "<%= a.position %>",
            },
        <%  end %>
        },
        ["fac"] =
        {
<% support.select { |s| s.type == 'FAC' }.each do |f| %>
            {
                ["callsign"] = "<%= f.callsign %>",
                ["comms"] = "<%= f.comms %>",
                ["altitude"] = "<%= f.altitude %>",
                ["position"] = "<%= f.position %>",
            },
        <%  end %>
        },
    },
    ["other"] = {
<% @flight.others.each do |f| %>
        {
            ["callsign"] = "<%= f.full_callsign %>",
            ["airframe"] = "<%= f.airframes %>",
            ["comms"] = "<%= f.frequency %>",
            ["tacan"] = "<%= f.tacan_channels %>",
            ["group_id"] = "<%= f.group_id %>",
            ["laser_mask"] = "<%= f.laser_mask %>",
            ["mission"] = "<%= f.mission %>",
            ["ao"] = "<%= f.ao %>",
            ["task"] = "<%= f.task %>",
        },
<% end %>
    },
    ["presets"] =
    {
<% Settings.theaters[@flight.theater].channels.each_with_index do |c, i| %>
        [<%= i+1 %>] =
        {
            ["freq"] = "<%= c.freq %>",
            ["name"] = "<%= c.name %>",
        },
<% end %>
    },
<% crypto = Crypto.new @flight.start.to_date %>
    ["ramrod"] = "<%= crypto.ramrod %>",
    ["navaids"] =
    {
<% Settings.theaters[@flight.theater].navaids.each_with_index do |n, i| %>
        {
            ["id"] = "<%= n.id %>",
            ["name"] = "<%= n.name %>",
            ["tcn"] = "<%= n.channel %>",
            ["pos"] = "<%= n.pos %>",
            ["elev"] = "<%= n.elevation %>",
        },
<% end %>
    },
    ["notes"] = [===[<%= @flight.notes %>]===],
}
